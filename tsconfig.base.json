{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "bin",
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "incremental": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,

    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,

    "lib": [
      "ESNext"
    ]
  }
}
